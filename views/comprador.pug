doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title 
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    body 
        nav.navbar.navbar-expand-lg.navbar-secondary.bg-secondary 
        
                a.nav-link.text-white(href="/") Cerrar Sesión
        .container-fluid.p-5
            h1.text-center Listado de Producto 
            table.table.table-striped.mt-4
                thead
                    tr
                        th Nombre Producto
                        th Descripcion
                        th Valor
                tbody
                    each dato in datos
                        tr
                            td #{dato.nombre}
                            td #{dato.descripcion}
                            td #{dato.precio}
                        
        
        block content
            footer.bg-secondary.text-white.text-center.mt-auto.py-3
                p Integrantes: Sharon Bastidas - Camila Palma - Yeferson Rosales - Mauricio López | Grupo 2
        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")
            
